<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.erazojavier.proyecto_mybudget">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_MyBudget"
        tools:targetApi="31">
        <activity
            android:name=".inversiones.InversionesActivity"
            android:exported="true"
            android:label="@string/title_activity_inversiones"
            android:theme="@style/Theme.Proyecto_MyBudget.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ahorros.AhorrosActivity"
            android:exported="false"
            android:label="@string/title_activity_ahorros"
            android:theme="@style/Theme.Proyecto_MyBudget.NoActionBar">

        </activity>
        <activity
            android:name=".egresos.EgresosActivity"
            android:exported="false"
            android:label="@string/title_activity_egresos"
            android:theme="@style/Theme.Proyecto_MyBudget.NoActionBar" />
        <activity
            android:name=".ingresos.IngresosActivity"
            android:exported="false"
            android:label="@string/title_activity_resumen_ingresos"
            android:theme="@style/Theme.Proyecto_MyBudget.NoActionBar"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>